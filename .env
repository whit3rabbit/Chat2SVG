# Default provider (optional, will be determined automatically if not set)
# Options: openai, anthropic, openrouter, local
DEFAULT_LLM_PROVIDER=anthropic

# OpenAI Settings
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o

# Anthropic (Claude) Settings
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_API_BASE=
ANTHROPIC_MODEL=claude-3-5-sonnet-20240620

# OpenRouter Settings
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_API_BASE=https://openrouter.ai/api/v1
OPENROUTER_MODEL=openai/gpt-4o

# Local LLM Settings (for OpenAI-compatible APIs like Ollama, LM Studio, etc.)
LOCAL_LLM_BASE_URL=http://localhost:1234/v1
LOCAL_LLM_API_KEY=
LOCAL_LLM_MODEL=default